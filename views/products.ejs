<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All products</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <!-- <link rel="stylesheet" href="/styles/main.css" /> -->
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css">
  <link rel="stylesheet" href="/styles/products.css">


  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <%- include('partials/_header') %>
  </header>

  <h1>All products</h1>
<div class="search-shoes">
  <h3>Search</h3>
  <form >
    <div class="search-by-size">
      <label for="search-size">Size</label>
      <input type="number" placeholder="Size" id="search-size" name="size">
    </div>

    <div class="search-by-type">
      <label for="search-type">Product type</label>
      <input type="text" placeholder="Product type" id="search-type" name="type">
    </div>

    <div class="search-by-color">
      <label for="search-color">Color</label>
      <input type="text" placeholder="Color" id="search-color" name="color">
    </div>

    <div class="search-by-price">
      <label for="search-price">Price, $</label>
      <input type="number" placeholder="Minimum" id="search-minimum-price" name="min-price">
      <input type="number" placeholder="Maximum" id="search-maximum-price" name="max-price">
    </div>

    <div>
      <button class="search-btn" type="submit">Search</button>
    </div>
  </form>
</div>



<!-- If  search button clicked, then show search result, hide all-products -->
<!-- Diana Ichmoukhametov -->
<div id="search-result">


</div>

<div class="products">
  <% products.forEach(product => { %>
    <div class="product-card">
      <a href="/products/<%= product.id %>">
        <img src="<%= product.photo_url %>" alt="<%= product.title %>">
      </a>
      <p><%= product.title %></p>
      <p>$<%= product.price %></p>
    </div>
  <% }); %>
</div>

</body>
</html>