<!--
    Title: ALL PRODUCTS PAGE 
    Description: Displays a list of all products with a filterable search feature
-->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Page Title -->
    <title>All products</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/nav.css">
    <link rel="stylesheet" href="/styles/products.css">

    <!-- Scripts -->
    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
</head>

<body>
    <!-- Header Section -->
    <header>
        <!-- Including Header Partial -->
        <%- include('partials/_header') %>
    </header>

    <!-- Main Title -->
    <h1>All products</h1>

    <!-- Filters Section -->
    <div class="filter-shoes">
        <h3>Search</h3>
        <form method="GET" action="/products">
            <!-- Search by Title -->
            <div class="filter-by-title">
                <label for="filter-title">Title:</label>
                <input type="text" name="title" placeholder="Title" id="filter-title">
            </div>

            <!-- Filter by Size -->
            <div class="filter-by-size">
                <label for="filter-size">Size:</label>
                <input type="number" name="size" id="filter-size">
            </div>

    
            <!-- Search by Color 
            <div class="filter-by-color">
                <label for="filter-color">Color:</label>
                <input type="text" name="color" placeholder="Color" id="filter-color">
            </div>
        -->

            <!-- Search by Price Range -->
            <div class="filter-by-price">
                <label for="filter-minimum-price">Price $:</label>
                <input type="number" name="minimumPrice" placeholder="Minimum" id="filter-minimum-price">
                <input type="number" name="maximumPrice" placeholder="Maximum" id="filter-maximum-price">
            </div>

            <!-- Submit Button -->
            <div>
                <button class="filter-btn" type="submit">Search</button>
            </div>
        </form>
    </div>

    <!-- Placeholder for Search Results -->
    <div id="search-result">
        <!-- Content will be populated upon search -->
    </div>

    <!-- All Products Display Section -->
    <div id="all-products">
        <!-- Loop through and display each product -->
        <% products.forEach(product => { %>
        <div class="product-card">
            <a href="/products/<%= product.id %>">
                <img src="<%= product.photo_url %>" alt="<%= product.title %>">
            </a>
            <p><%= product.title %></p>
            <p>$<%= product.price %></p>
        </div>
        <% }); %>
    </div>

</body>

</html>

